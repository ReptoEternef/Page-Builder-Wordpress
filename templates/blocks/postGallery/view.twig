

<div class="container">
  {% if values.layout == 'default' %}
    <div class="">

    </div>
  {% elseif values.layout == 'version2' %}
    <div class="">

    </div>  
  {% else %}
      <span>Erreur : layout</span>
  {% endif %}
</div>

<h3>Liste des movies</h3>

{% if posts is not empty %}
    <ul>
    {% for movie in posts %}
        <li>
            <a href="{{ movie.link }}">{{ movie.title }}</a>
            {# Exemple de champ ACF #}
            {% if movie.release_year %}
                - Année : {{ movie.release_year }}
            {% endif %}
        </li>
    {% endfor %}
    </ul>
{% else %}
    <p>Aucun post trouvé pour le post type "movie".</p>
{% endif %}




