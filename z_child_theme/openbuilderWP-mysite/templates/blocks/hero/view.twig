{# HERO #}

<div class="block-{{ block }}">
  {% if values.layout == layouts[0] %}
    <div class="{{ block }}-{{ layouts[0] }}" style="background-image: url({{ values.background }})">
      <div class="hero-default-content">
        <div class="hero-text-content">
          <h1>{{ values.title[lang] }}</h1>
          <h1><span>{{ values.subtitle[lang] }}</span></h1>
        </div>
        <h3>{{ values.slogan[lang] }}</h3>
        <div class="hero-default-btn-ctn">
          <button>{{ values.btn1[lang] }}</button>
          <button>{{ values.btn2[lang] }}</button>
        </div>
      </div>
    </div>
  {% elseif values.layout == layouts[1] %}
    <div class="{{ block }}-{{ layouts[1] }}">

    </div>  
  {% else %}
      <span>Erreur : layout</span>
  {% endif %}
</div>


